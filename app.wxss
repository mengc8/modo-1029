.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-size: 30rpx;
} 
.font24{
  font-size: 24rpx!important;
}
.font26{
  font-size: 24rpx!important;
}
.colorff6644{
  color: #ff6644;
}
/*警示状态栏*/
.status-bar{
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 90rpx;
    border-top: solid #efe5a7 3rpx;
    background-color: #fffae2;
    font-size: 30rpx;
    color: #222;
}
.status-bar text{
    padding: 0 3px;
    color: #e61773;
}
.in-block{
  display: inline-block;
}
.yuan{
  font-size: 20rpx;
  color: #ff0000;
}
.price{
  font-size: 44rpx;
}