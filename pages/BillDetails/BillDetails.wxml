        {{filters.monthTime(date)}}
      </view>
      <icon class='icon-down {{dateActive?"icon-up":""}}'> </icon>
    </picker>
  </view>
  <view class='total flexone'>
    <view>充值 ¥456</view>
    <view>消费 ¥789</view>
  </view>
</view>
