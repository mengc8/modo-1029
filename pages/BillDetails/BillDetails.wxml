  <view class='item border-b1'>
    <icon class='icon icont1'></icon>
    <view class='right-info'>
      <view class='flextwo'>
        <view>储值充值-中国银行(0100)</view>
        <view class='number'>+200</view>
      </view>
      <view class='time'>8月27日 13:01</view>
    </view>
  </view>
  <view class='item border-b1'>
    <icon class='icon icont2'></icon>
    <view class='right-info'>
