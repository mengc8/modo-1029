.container{
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
}
.bg-img{
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: -1;
}
#phone{
  margin: 434rpx auto 60rpx;
}
.phone,.code{
  width: 522rpx;
  height: 76rpx;
  border-radius: 8rpx;
  border:2rpx solid #fff;
  font-size: 28rpx;
  /* text-indent: 20rpx; */
  padding-left: 20rpx;
  color: #fff;
}
#code{
  display: flex;
  justify-content: space-between;
}
.code{
  width: 276rpx;
  margin-right: 14rpx;
}
.send,.login{
  width: 228rpx;
  height: 82rpx;
  background: #ff6644;
  color: #fff;
  line-height: 82rpx;
  font-size: 30rpx;
}
.login{
  width: 260rpx;
  height: 90rpx;
line-height: 90rpx;
font-size: 34rpx;
margin-top: 100rpx;
}
.self{
  color: #ff6644;
  margin: 30rpx 0 78rpx;
}
.note{
  font-size: 20rpx;
  color: #fff;
}