<wxs module="filters" src="../../filters/filters.wxs"></wxs>
<view class='img-slider'>
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-active-color="rgba(255, 102, 89, 1)"  bindchange="swiperPageSwith">
    <block wx:for="{{branchObj.Images}}" wx:for-index="index" wx:for-item="item">
      <swiper-item>
        <image src="{{modoImgHttp+item}}" class="slide-image" />
      </swiper-item>
    </block>
  </swiper>
  <view class='index-box'>
    <icon class='index-img'></icon>{{imgIndex}}/{{branchObj.Images.length}} 
  </view>
</view>
<view class='box'>
  <view class='flextwo branch-name-box'>
    <view class='branch'>{{branchObj.Name}}</view>
    <view class='start flexone'>
      <view class='start-item'></view>
      <view class='start-item'></view>
      <view class='start-item'></view>
      <view class='start-item'></view>
      <view class='start-item'></view>
      4.9分</view>
  </view>
  <view class='flexone note-box'>
    <view>交通便利</view>
    <view>管家式服务</view>
    <view>独立卫浴</view>
    <view>设备全</view>
  </view>
  <view class='position-box'>
    <icon class='icon icon-position'></icon>
    {{branchObj.Address}}
  </view>
  <view class='phone-box border-b1'>
    <icon class='icon icon-phone'></icon> 010-64786321
  </view>
  <view class='time-box border-b1'>
    <view class='date-title'>日期</view>
    <view class='date flexone' bindtap='toGetDate'>
      <icon class='icon icon-date'></icon>|
      <view class='chose-time'>{{filters.deleteYearTime(startTime)}}-{{filters.deleteYearTime(endTime)}}</view>
    </view>
  </view>
</view>
<view class='room-lists'>
  <view class='room-title marginl30'>房型信息</view>
  <view  wx:for="{{branchObj.RoomTypes}}" wx:for-item="item" wx:for-index="index" bindtap='getItemDetails' data-index='{{index}}'
  class='room-item flexone  marginl30 {{index!=itemIndex?"border-abs":""}}'>
    <view class='room-head flextwo'> 
      <view class='scale'>
        <icon class='icon icon-scale'></icon>
      </view>
      <image class='room-img' src='{{modoImgHttp+item.Img}}' bindtap='openFun'></image>
      <view class='flextwo right-info'>
        <view>
          <view class='room-type'>{{item.Name}}</view>
          <view class='room-note ellipsis'>{{item.Area}}㎡ 床型{{item.BedTypeDescribe}} </view>
        </view>
        <view class='right-price'>
          <view>¥
            <text class='font40'>{{item.MartketPrice}}</text>起</view>
          <view>会员9.5折起</view>
        </view>
      </view>
    </view>
    <view class='room-detail' wx:if="{{index==itemIndex}}">
      <view class='detail-box'>
        <view class='detail-title border-b1'>微信专享</view>
        <view class='flextwo'>
          <view class='left-note'>
            <view>14:00退房</view>
            <view>微信粉丝</view>
          </view>
          <view class='righr-note flexone'>
            <view class='money-show'>
              <view>
                ¥
                <text class='font40'>{{item.VIPPrice}}</text>
              </view>
              <view>最低可享9.5折</view>
            </view>
            <view class='book-box' bindtap='toBook' data-branchId='{{item.BranchID}}' data-type='{{item.Type}}'>
              预定
              <view class='online'>在线付</view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
