<wxs module="filters" src="../../filters/filters.wxs"></wxs>
<view class='container'>
  <view class='type-chose'>
    <view class='active'>全部订单</view>
    <view>待入住</view>
    <view>待评价</view>
  </view>
  <view wx:if="{{boolean}}">
    <scroll-view scroll-y='true' scroll-x='false' style="height:{{height}}px" bindscrolltolower='lower'>
      <view class='order-item' wx:for="{{orderLists}}" wx:key="index" wx-item="item">
        <view class='icon-long'>长</view>
        <!-- 0等待确认，1预定未付，2预定已付，3消费中，4已结转，5订单关闭，6客户取消 -->
        <view class='{{item.Status==5||item.Status==6?"icon-cancel":""}} {{item.Status==1?"icon-wait":""}} {{item.Status==0?"icon-success":""}}'>{{item.StatusToString}}</view>
        <view class='order-number'>
          订单号：{{item.BillID}}
        </view>
        <view class='branch'>{{item.BranchName}}</view>
        <view class='font26 color333 room-type'>豪华大床房</view>
        <view class='time'>开始时间:{{filters.formalTime(item.Orders[0].StartDate)}}</view>
        <view class='time'>开始时间:{{filters.formalTime(item.Orders[0].EndDate)}}</view>
        <view class='money font26 color333 border-b1'>
          支付金额：¥{{item.TotalRecevice}}
        </view>
        <view class='btn-box'>
          <view>删除订单</view>
          <view wx:if="{{item.Status==4}}">订单评价</view>

        </view>
      </view>
    </scroll-view>
  </view>
  <view wx:if="{{!boolean}}" id='noorder'>
    <icon class='noorder'></icon>
    <view>暂无相关订单</view>
  </view>
</view>