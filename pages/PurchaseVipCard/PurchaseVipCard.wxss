.container{
  text-align: left;
  padding: 30rpx;
  background: #f2f2f2;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  color: #666;
}
.card-header{
  font-size: 34rpx;
}
.title-buy{
  width: 100%;
  margin-top: 46rpx;
  text-indent: 20rpx;
}
page{height:100%}
.cion-buy-type{
  display: inline-block;
  width: 68rpx;
  height: 68rpx;
  background: #ff6644;
  border-radius: 34rpx;
  vertical-align: middle;
  margin: -10rpx 10rpx 0;
}
.card-lists{
  width: 100%;
  margin-top: 10rpx;
}
.card-header,.card-item{
  width: 100%;
  background: #fff;
  height: 104rpx;
  line-height: 104rpx;
}
.card-item{
  margin-top: 18rpx;
  display: flex;
  justify-content: space-between;
    padding: 0 22rpx;
    font-size: 32rpx;
    box-sizing: border-box;
}
.chose{
  display: inline-block;
  height: 60rpx;
  width: 64rpx;
  background: url("data:image/png;base64,");
  background-size: cover;
  vertical-align: middle;
  margin: 20rpx 30rpx 0 0;
}
.chose.active{
  background: transparent;
}
.footer{
  position: fixed;
  width: 100%;
  height: 116rpx;
  line-height: 116rpx;
  background: #fff;
  bottom: 0;
  color: #ff0000;
  font-size: 44rpx;
}
.yuan-icon{
  font-size: 24rpx;
  margin-left: 20rpx;
}
.zhifu{
  height: 100%;
  float: right;
  width: 220rpx;
  border-radius: 0;
  background: linear-gradient(to right bottom,#ff4d4d,#ff6644);
  line-height: 116rpx;
  color: #fff;
  font-size: 34rpx;
}