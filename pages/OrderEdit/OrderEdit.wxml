<view class='box'>
  <view class='flexone order-head'>
    <image class='order-img' src='{{imgUrls}}'></image>
    <view>
      <view class='branch'>西直门店</view>
      <view class='type'>西直门店</view>
    </view>
  </view>
  <view class='flextwo time-box border-b1'>
    <view>
      <view class='time'>08月03日</view>
      <view class='time-note'>最早入住时间15:00</view>
    </view>
    <view>
      <view class='time time-end'>08月03日</view>
      <view class='time-note'>最早入住时间15:00</view>
    </view>
    <view class='days'>共1晚</view>
  </view>
  <view class='flextwo number-box border-b1'>
    <view>
      预定房间数
    </view>
    <view class='flexone ' id='number'>
      <view class='reduce' hover-class="active">-</view>
      <view class='number-input'>2</view>
      <view class='plus' hover-class="active">+</view>
    </view>
  </view>
  <view class='flextwo comein-box border-b1'>
    <view>
      预定到店时间(便于管家提前准备)
    </view>
    <view class='trangle'>
      15:30
    </view>
  </view>
  <view class='flexone note-box border-b1'>
    备注
    <input placeholder='输入您其他的特殊需求' class='note-input'></input>
  </view>
  <view class='flextwo quan-box border-b1'>
    <view>
      优惠券
    </view>
    <view class='trangle'>
      有两张可用
    </view>
  </view>
  <view class=' quan-box border-b1'>
    <view class='mingxi-title'>费用明细</view>
    <view class='flextwo'>
      <view class='mingxi-item'>整日租赁费用：
        <text>¥300</text>
      </view>
      <view class='look-price trangle'>
        查看每天房价
      </view>
    </view>
    <view class='mingxi-item'>代金券优惠：
      <text>¥300</text>
    </view>
    <view class='mingxi-item'>会员卡开通费用：
      <text>¥300</text>
    </view>
  </view>
</view>
<view class='flextwo btn-box'>
  <view>¥<text class='font44'>300</text></view>
  <button>立即预定</button>
</view>