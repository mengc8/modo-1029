.nav {
  display: flex;
  font-size: 30rpx;
  border: 1rpx solid #666;
  padding: 28rpx 28rpx;
}

.icon-down {
  width: 0;
  height: 0;
  border-width: 6px;
  border-style: solid;
  border-color: #000 transparent transparent transparent;
  vertical-align: middle;
  margin-top: 8rpx;
}

.city {
  position: relative;
  width: 116rpx;
}

.city::after {
  content: "";
  width: 1rpx;
  height: 50rpx;
  display: inline-block;
  position: absolute;
  background: #333;
  right: 1rpx;
  top: -4rpx;
}
picker {
  display: inline-block;
  margin-right: 10rpx;
}
.serch-box {
  margin-left: 20rpx;
  width: 480rpx;
  color: #999;
}

.icon-ser {
  width: 7px;
  height: 7px;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  transform: rotate(45deg);
  float: right;
  vertical-align: middle;
  margin-top: 10rpx;
}

.condition-box {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #333;
  height: 76rpx;
}

.default {
  float: right;
  position: relative;
}
.order{
  position: absolute;
  background: #fff;
  box-shadow: 4rpx 4rpx 8rpx rgba(0, 0, 0, 0.1) ,-4rpx -4rpx 8rpx rgba(0, 0, 0, 0.1);
  z-index: 999;
  text-align: center;
  font-size: 26rpx;
  width: 120%;
  left: -10%;
  line-height: 60rpx;
  top: 60rpx;
  border-radius: 8rpx;
}
.order::before{
  height: 14rpx;
  width: 14rpx;
  border-right: 2rpx solid rgba(0, 0, 0, 0.1);
  border-top: 2rpx solid rgba(0, 0, 0, 0.1);
  transform: rotate(-45deg);
  position: absolute;
  background: #fff;
  z-index: 99999;
  content: "";
  top: -10rpx;
}
.condition-item {
  float: left;
  margin-right: 20rpx;
  padding: 16rpx 20rpx;
  border-radius: 8rpx;
  border: 1rpx solid #999;
}

.condition-item.active {
  background: #f64;
  color: #fff;
  border: none;
  padding: 18rpx 20rpx;
}

.default {
  margin-top: 16rpx;
  font-size: 30rpx;
}
.branch-item{
  padding: 20rpx 0 ;
  position: relative;
}
.branch-img{
  width: 100%;
  height: 426rpx;
  border-radius: 10rpx;
}
.branch-name{
  font-size: 34rpx;
  font-weight: 600;
  margin-top: 16rpx;
}
.address{
  font-size: 24rpx;
  padding: 6rpx 0 12rpx;
  color: #999;
  max-width: 600rpx;
}
.note{
  padding: 6rpx 12rpx;
  background: #333;
  color: #fff;
  font-size: 20rpx;
  margin-right: 12rpx;
}
.icon-start{
  width: 17rpx;
  height: 15rpx;
  background: url(data:image/png;base64,);
  background-size: cover;
  vertical-align: middle;
  margin-top: -5rpx;
}
.score{
  color: #ff6644;
  font-size: 28rpx;
  margin-top: 20rpx;
}
.position{
  position: absolute;
  height: 60rpx;
  top: 386rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  line-height: 60rpx;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  width: 100%;
  font-size: 20rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.price{
  font-size: 32rpx;
}
.icon-position{
  background: url(data:image/png;base64,);
  width: 25rpx;
  height: 26rpx;
  background-size: cover;
  vertical-align: middle;
  margin-top: -6rpx;
}