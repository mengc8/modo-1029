.lists {
  padding: 58rpx 30rpx;
  font-size: 34rpx;
}

.lists-item {
  padding: 44rpx;
  box-shadow: 4rpx 0 8rpx rgba(0, 0, 0, 0.1),
                -4rpx 0 8rpx rgba(0, 0, 0, 0.1),
                0rpx 4rpx 8rpx rgba(0, 0, 0, 0.1),
                0rpx -4rpx 8rpx rgba(0, 0, 0, 0.1);
  border-radius: 6rpx;
  position: relative;
  margin-bottom: 26rpx;
}

.person-item {
  font-size: 30rpx;
  margin-top: 30rpx;
}

.person-item text {
  color: #999;
}
.delete {
  position: absolute;
  right: 44rpx;
  top: 44rpx;
  font-size: 22rpx;
  border-radius: 21rpx;
  padding: 0 20rpx;
  height: 42rpx;
  line-height: 42rpx;
  background: #f64;
  color: #fff;
}
.add-personal{
  width: 566rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  margin: 100rpx auto;
  border-radius: 0;
  background: #ff6644;
  text-align: center;
}
